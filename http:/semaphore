import threading
import time

semaphore = threading.Semaphore(2)  # allow 2 threads at a time

def task(name):
    print(f"{name} is waiting for access...")
    with semaphore:
        print(f"{name} entered the critical section")
        time.sleep(1)
    print(f"{name} left the critical section")

threads = []

for i in range(5):
    t = threading.Thread(target=task, args=(f"Thread {i+1}",))
    threads.append(t)
    t.start()

for t in threads:
    t.join()

print("Semaphore ExampleÂ Completed")*
